<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.huang.cookhelper.Main2Activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MainLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/headline"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                android:text="back"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:id="@+id/button"
                android:elevation="0dp"
                style="@style/Widget.AppCompat.Button" />

            <TextView
                android:text="Add Recipe:"
                android:layout_width="174dp"
                android:layout_height="38dp"
                android:id="@+id/title"
                android:gravity="left|center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textStyle="normal|bold"
                android:textSize="24sp"
                android:layout_weight="0.52"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="32dp">

            <TextView
                android:text="Enter Name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textStyle="normal|bold"
                android:layout_weight="0.03" />

            <EditText
                android:layout_width="118dp"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText5"
                android:hint=" Enter name for your recipe"
                android:background="@drawable/border_style"
                android:layout_weight="0.30" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/subhead1">

            <TextView
                android:text="Choose Ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subtitle1"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textStyle="normal|bold"

                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <CheckBox
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:id="@+id/check1"
                tools:text="Ingredient1"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:checked="true"
                android:layout_weight="0.52" />

            <CheckBox
                android:text="Ingredient3"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:id="@+id/check3"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:typeface="serif"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:text="Ingredient2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check2"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:layout_weight="0.06" />

            <CheckBox
                android:text="Ingredient 4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox"
                android:layout_weight="0.09"
                android:fontFamily="serif"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/subhead2"
            android:weightSum="1"
            android:layout_height="wrap_content">

            <TextView
                android:text="Enter Directions and Other Information:"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:id="@+id/subtitle2"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:id="@+id/pretime">

            <TextView
                android:text="Preparation Time:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pre"
                android:layout_weight="0.77"
                android:typeface="normal"
                android:textAppearance="@android:style/TextAppearance"
                android:fontFamily="serif"
                android:textSize="14sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText6"
                android:layout_weight="1"
                android:hint="  Enter Prep time"
                android:background="@drawable/border_style"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:text="Cook Time:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/co"
                android:layout_weight="1"
                android:textAppearance="@android:style/TextAppearance"
                android:textSize="14sp"
                android:typeface="serif" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/cooktime"
                android:layout_weight="0.53"
                android:hint="  Enter Cooking time"
                android:background="@drawable/border_style"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:text="Calories:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ca"
                android:layout_weight="1"
                android:textAppearance="@android:style/TextAppearance"
                android:fontFamily="serif"
                android:textSize="14sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText8"
                android:layout_weight="0.43"
                android:hint="  Enter the calories"
                android:background="@drawable/border_style"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="68dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_weight="1"
                android:hint="step1&#10;step 2 &#10;step 3..."
                android:background="@drawable/border_style"
                android:padding="10dp"
                style="@android:style/Widget.EditText"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/subhead3">

            <TextView
                android:text="Select Category and Type:"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:id="@+id/subtitle3"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textStyle="normal|bold"
                android:textSize="20sp"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/category"
                android:entries="@array/category_arrays"
                android:layout_weight="1" />


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/type"
                android:entries="@array/type_arrays"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <Button
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancel"
                android:layout_weight="1.27" />

            <Button
                android:text="Add Recipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
